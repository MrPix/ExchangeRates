{
    "manifest_version": 2,
    "name": "Exchange rates Ukraine",
    "description": "Exchange rates from the most popular banks of Ukraine",
    "version": "1.0",
    "author": "Oleksiy Shapovalov",
    "background": {
        "scripts": ["popup.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    }
}
